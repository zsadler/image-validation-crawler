{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist/server",
        "rootDir": "src/server"
    },
    "include": ["src/server/**/*"],
    "exclude": ["node_modules"]
}